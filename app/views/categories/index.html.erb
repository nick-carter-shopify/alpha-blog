<h1 class="text-center mt-4">Listing all Categories</h1>

<%= render 'layouts/pagination', obj: @categories %>

<div class="container mb-4">
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow rounded">
          <div class="card-body">
            <h5 class="card-title">
            <%= link_to category.name, category_path(category), class: 'card-title-link' %>
            </h5>
            <div>
             <%= pluralize(category.articles.count, "article") %>
            </div>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(category.created_at) %>, edited <%= time_ago_in_words(category.updated_at) %></small> 
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mb-4">
<%= render 'layouts/pagination', obj: @categories %>
</div>